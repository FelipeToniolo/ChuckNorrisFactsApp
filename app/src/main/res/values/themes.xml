<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ChuckNorrisFacts" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="android:windowAnimationStyle">@style/WindowAnimationStyle</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bossanova</item>
        <item name="colorPrimaryVariant">@color/salt_box</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/eminence</item>
        <item name="colorSecondaryVariant">@color/trendy_pink</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!-- App Theme Font -->
        <item name="fontFamily">@font/chuck_norris</item>
    </style>

    <style name="WindowAnimationStyle">
        <item name="android:windowEnterAnimation">@android:anim/linear_interpolator</item>
    </style>

    <style name="Theme.ChuckNorrisFacts.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ChuckNorrisFacts.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ChuckNorrisFacts.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>